{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run npm start",
            "type": "shell",
            "command": "npm",
            "args": ["run", "start"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$tsc-watch"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "default"
            }
        }
    ]
}
