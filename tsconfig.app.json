{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["src/**/*", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "types/*.d.ts"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "typeRoots": ["types"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
